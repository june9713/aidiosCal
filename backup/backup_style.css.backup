 }
 
 .alarm-header-collapsible:hover {
    background: #e9ecef;
 }
 
 .alarm-header-collapsible:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
 }
 
 .alarm-header-collapsible h3 {
    margin: 0;
