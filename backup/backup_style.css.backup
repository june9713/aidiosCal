 .modal-header {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid #ddd;
    gap: 12px;
 }
 
 .modal-header h2 {
    margin: 0;
    color: #000;
